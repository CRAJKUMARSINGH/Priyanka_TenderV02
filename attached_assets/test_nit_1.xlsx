# This file will be generated by the test_data_generator.py
# It creates a sample single work NIT Excel file with bidder data
import pandas as pd
import os

def create_test_nit_1_file():
    """Create test NIT 1 work Excel file"""
    os.makedirs("attached_assets", exist_ok=True)
    
    # Sample tender information
    tender_info = pd.DataFrame({
        'NIT Number': ['NIT-001/2024-25'],
        'Work Description': ['Construction of concrete road with proper drainage system'],
        'Estimated Cost': [1500000],
        'EMD Amount': [37500],
        'Completion Period': ['8 months'],
        'Date of Opening': ['15/01/2025']
    })
    
    # Sample bidders data
    bidders_data = pd.DataFrame({
        'S.No.': [1, 2, 3, 4, 5],
        'Name of Bidder': [
            'ABC Construction Pvt. Ltd.',
            'XYZ Builders & Contractors',
            'Supreme Engineering Works',
            'Modern Infrastructure Ltd.',
            'Progressive Construction Co.'
        ],
        'Quoted Amount': [1425000, 1465000, 1398000, 1502000, 1439000],
        'EMD Submitted': ['Yes', 'Yes', 'Yes', 'Yes', 'Yes'],
        'Technical Qualification': ['Qualified', 'Qualified', 'Qualified', 'Not Qualified', 'Qualified'],
        'Financial Qualification': ['Qualified', 'Qualified', 'Qualified', 'Qualified', 'Qualified'],
        'Overall Status': ['Qualified', 'Qualified', 'Qualified', 'Not Qualified', 'Qualified']
    })
    
    # Create Excel file
    with pd.ExcelWriter('attached_assets/test_nit_1.xlsx', engine='openpyxl') as writer:
        tender_info.to_excel(writer, sheet_name='Tender_Info', index=False)
        bidders_data.to_excel(writer, sheet_name='Bidders', index=False)

if __name__ == "__main__":
    create_test_nit_1_file()
